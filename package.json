{
  "devDependencies": {
    "@types/prettier": "1.19.0",
    "@types/wait-on": "^4.0.0",
    "eslint-plugin-import": "2.20.0",
    "husky": "3.0.7",
    "netlify-cli": "2.30.0",
    "npm-normalize-package-bin": "1.0.1",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.19.1",
    "typescript": "3.7.5",
    "wait-on": "^5.2.0"
  },
  "engines": {
    "yarn": "^1.17.0",
    "node": ">=12.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --max-warnings=0"
    }
  },
  "keywords": [
    "ethereum",
    "state channels"
  ],
  "private": true,
  "resolutions": {
    "react": "16.8.0",
    "react-dom": "16.8.0",
    "@babel/core": "7.8.3",
    "@types/react": "16.9.19",
    "@types/webgl2": "0.0.5",
    "broccoli": "3.3.3"
  },
  "scripts": {
    "build:netlify": "yarn workspaces foreach -avp run build:netlify",
    "build:netlify:incremental": "yarn build:netlify",
    "build:netlify:production": "yarn workspaces foreach -avp run build:netlify:production",
    "build:typescript": "yarn workspaces foreach -a run build:typescript",
    "clean": "git clean -Xdf --exclude=\"!.env.*\"",
    "clean:dry": "git clean -Xdn --exclude=\"!.env.*\"",
    "lint:check": "yarn workspaces foreach run lint:check -- --max-warnings=0",
    "lint:write": "yarn workspaces foreach run lint:write",
    "prepare": "yarn workspaces foreach -vtpi --jobs 8 run prepare",
    "release:netlify": "yarn workspaces foreach run -va release:netlify -- --auth $NETLIFY_ACCESS_TOKEN --message $(git rev-parse --short HEAD) $([ $(git rev-parse --abbrev-ref HEAD) = master ] && echo --prod)",
    "release:netlify:incremental": "echo `Not implemented`",
    "release:netlify:production": "yarn workspaces run release:netlify:production -- --auth $NETLIFY_ACCESS_TOKEN --message $(git rev-parse --short HEAD) --prod",
    "start-servers": "./bin/start-servers.sh",
    "start:shared-ganache": "cd packages/devtools && NODE_ENV=development yarn start:shared-ganache",
    "test": "yarn workspaces foreach -avp --private --jobs 8 run test",
    "test:ci": "yarn workspaces foreach -avp --private --jobs 8 run test:ci",
    "test:ci:incremental": "yarn test:ci --concurrency 3 --since $(git merge-base $CIRCLE_BRANCH origin/master)"
  },
  "workspaces": [
    "packages/*"
  ]
}
